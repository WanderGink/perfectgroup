<% provide :title, @user.username %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= @user.username %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats", user: @user %>
    </section>
  </aside>
  <div class="col-md-8">
    <% unless @user.current_user? current_user %>
      <%= render "follow_form", user: @user,
        following: @following %>
    <% end %>
  </div>
</div>
