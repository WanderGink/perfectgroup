<div class="row">
  <div class="main">
    <div class="col-md-9">
      <div class="card padding-md">
        <div class="row">
          <div class="col-sm-3">
            <%= image_tag @product.product_image.url(:thumb),
              class: "img-thumbnail" %>
          </div>
          <div class="col-sm-9">
            <h3><%= @product.title %></h3>
            <h4><%= number_to_currency @product.price %></h4>
            <h5><%= @product.description %></h5>
            <% if @supports.order_item.present? %>
              <%= form_for @supports.order_item, url: order_items_path(@supports.order_item),
                remote: true do |f| %>
                <%= f.hidden_field :quantity, value: 1,
                class: "form-control", min: 1 %>
                <%= f.hidden_field :product_id, value: @product.id %>
                <% if can? :read, Product %>
                  <%= f.submit t("add_to_cart"),
                  class: "btn btn-danger" %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <br><br>
      <div class="card padding-md">
        <div class="row">
          <div class="col-sm-12">
            <ul class="nav nav-tabs">
              <li class="active">
                <a data-toggle="tab" href="#comment">
                  <%= t "comment" %>
                </a>
              </li>
              <li>
                <a data-toggle="tab" href="#reviewers">
                  <%= t "reviewers" %>
                </a>
              </li>
            </ul>
            <div class="tab-content">
              <div id="comment" class="tab-pane fade in active">
                <br>
                <%= form_for [@product, @supports.comment], remote: true do |f| %>
                  <div class="form-group">
                    <%= f.text_area :content, class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.submit t("comment"), class: "btn btn-success" %>
                  </div>
                <% end %>
                <hr>
                <div id="comments-list-box">
                  <% if @product.comment_products.present? %>
                    <%= render @product.comment_products %>
                  <% end %>
                </div>
              </div>
              <div id="reviewers" class="tab-pane fade">
                <div id="xh" class="rank">
                    <table class="ds">
                      <thead>
                        <tr>
                          <th>Mức đánh giá</th>
                          <th>Số lượng sản phẩm</th>
                          <th>Phần trăm</th>
                        </tr>
                      </thead>
                      <tfoot>
                        <tr>
                          <td>Bảng đánh giá dựa trên số lượng sản phẩm đã được đánh giá: </td>
                          <td id="tongsp">788</td>
                          <td><input type="button" value="Xem biểu đồ" onclick="tinh();"></td>
                        </tr>
                      </tfoot>
                      <tbody>
                        <tr>
                          <td>5 sao</td>
                          <td id="sp5">300</td>
                          <td id="s5">38</td>
                        </tr>
                        <tr>
                          <td>4 sao</td>
                          <td id="sp4">200</td>
                          <td id="s4" >25</td>
                        </tr>
                        <tr>
                          <td>3 sao</td>
                          <td id="sp3">158</td>
                          <td id="s3">20</td>
                        </tr>
                        <tr >
                          <td>2 sao</td>
                          <td id="sp2">100</td>
                          <td id="s2">13</td>
                        </tr>
                        <tr>
                          <td>1 sao</td>
                          <td id="sp1">30</td>
                          <td id="s1">4</td>
                        </tr>
                      </tbody>
                  </table>
                  <div class="piechart">
                    <h3>Đánh giá chất lượng sản phẩm</h3>
                    <canvas id="quality" width="400" height="200"></canvas>
                    <script src="js/chart2.js"></script>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
